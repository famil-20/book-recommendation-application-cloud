<%- include('./partials/head'); -%>

	<body>
		<%- include('./partials/nav') %>
			<h2>All Book Recommendations</h2>
			<div>
				<% if (books.length> 0) { %>
					<ul class="books">
						<% books.forEach( book=> { %>
							<li class="book">
								<img src="/assets/images/book.png" alt="book icon">
								<h4>
									<%= book.title %>
								</h4>
								<p>
									<%= book.description %>
								</p>
							</li>
							<% }) %>
					</ul>
					<% } else { %>
						<p>There is no book recommendation to show ):</p>
						<% } %>
			</div>

	</body>
	<%- include('./partials/footer'); -%>